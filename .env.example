# Chat Application Backend - Environment Configuration Template
# Copy this file to .env and update the values according to your environment

# Application Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/chat_application
MONGODB_TEST_URI=mongodb://localhost:27017/chat_application_test

# JWT Configuration
# IMPORTANT: Generate new secret keys for production!
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRE=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production-minimum-32-characters
JWT_REFRESH_EXPIRE=7d

# Cookie Configuration
COOKIE_SECRET=your-super-secret-cookie-key-change-this-in-production-minimum-32-characters
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_MAX_AGE=86400000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Session Configuration
SESSION_TIMEOUT_MINUTES=5
SESSION_WARNING_MINUTES=1
PIN_RETRY_LIMIT=5
PIN_RETRY_WINDOW_MINUTES=15

# Security Configuration
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_HOURS=1

# CORS Configuration
CORS_ORIGIN=https://chat-app-ravi.vercel.app

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d

# WebSocket Configuration
WS_CORS_ORIGIN=https://chat-app-ravi.vercel.app
WS_HEARTBEAT_INTERVAL=25000
WS_HEARTBEAT_TIMEOUT=60000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Development Configuration (only used in development)
DEV_ENABLE_CORS=true
DEV_ENABLE_LOGGING=true
DEV_LOG_REQUESTS=true

# Production Configuration (only used in production)
PROD_TRUST_PROXY=true
PROD_SECURE_COOKIES=true
PROD_HTTPS_ONLY=true

# Optional: Email Configuration (for future features)
# EMAIL_SERVICE=gmail
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# Optional: Redis Configuration (for session store in production)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# Optional: File Upload Configuration (for future features)
# UPLOAD_MAX_SIZE=10485760
# UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# Optional: SMS Configuration (for phone verification)
# SMS_SERVICE=twilio
# SMS_ACCOUNT_SID=your-twilio-sid
# SMS_AUTH_TOKEN=your-twilio-token
# SMS_FROM_NUMBER=+1234567890
